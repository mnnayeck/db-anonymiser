<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="false">
	
	<property name="HOME_LOG" value="logs/anonymisation.log"/>
    
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} - %m%n</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${HOME_LOG}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>logs/archived/anonymization.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<!-- each archived file, size max 10MB -->
			<maxFileSize>1GB</maxFileSize>
			<!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
			<totalSizeCap>10GB</totalSizeCap>
			<!-- 60 days to keep -->
			<maxHistory>180</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} %5p %c.%M:%L - %m%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.github.mnnayeck.dbanonymiser" level="info" />
	<logger name="ch.qos.logback" level="warn" />
	<logger name="com.microsoft.sqlserver.jdbc.internals.TDS.Channel" level="error" />
	
	
	<root level="DEBUG">
		<appender-ref ref="FILE-ROLLING"/>
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>
